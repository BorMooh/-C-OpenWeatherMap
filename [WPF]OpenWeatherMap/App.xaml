<Application x:Class="_WPF_OpenWeatherMap.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_WPF_OpenWeatherMap"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Stil za Border - vsak blok za podatke je v svojem borderju-->
        <Style TargetType="Border" x:Key="borderItems">
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Background" Value="PapayaWhip" />
        </Style>
        
        <!-- Stil za naslov gradnika - Veter, Vreme, Temperatura  -->
        <Style TargetType="Label" x:Key="labelNaslov">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="15" />
        </Style>

        
        <!-- Stil za gumb - CornerRadius, itd.-->
        <Style TargetType="Button" x:Key="styledButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="TextBlock.TextAlignment" Value="Center" />
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15" />
                </Style>
            </Style.Resources>
        </Style>

    </Application.Resources>
</Application>
